    "mathematical_formulations": [
      {
        "equation_name": "CSI Variance Calculation",
        "formula": "Var(i) = Σ(n=1 to N) Σ(k=1 to K) (A(i)^n_k - Mean(i)^n)² / (KN)",
        "purpose": "Gesture detection threshold calculation",
        "complexity": "O(N×K)"
