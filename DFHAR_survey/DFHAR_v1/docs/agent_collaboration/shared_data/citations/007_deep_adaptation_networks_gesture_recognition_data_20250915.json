    "mathematical_formulations": [
      {
        "equation_name": "Multi-Kernel MMD",
        "formula": "D²k(p,q) = ||Ep[φ(xs)] - Eq[φ(xt)]||²Hk",
        "purpose": "Measure distribution discrepancy between domains",
        "complexity": "O(n²)"
      },
      {
        "equation_name": "Kernel Combination",
        "formula": "k = Σ(u=1 to m) βu ku, where Σβu = 1",
        "purpose": "Optimal multi-kernel selection",
        "complexity": "O(m)"
      },
      {
        "equation_name": "Conjugate Phase Calibration",
        "formula": "x̃(f,t) = x1(f,t) · x*2(f,t)",
        "purpose": "Remove time-variant phase offsets",
        "complexity": "O(N)"
      },
      {
        "equation_name": "MK-MMD Regularized Loss",
        "formula": "min_Φ (1/n)Σ J(θ(xi), yi) + λΣ D²k(D^l_s, D^l_t)",
        "purpose": "Domain-adapted deep learning objective",
        "complexity": "O(CNN + MMD)"
      }
    ]
  },
