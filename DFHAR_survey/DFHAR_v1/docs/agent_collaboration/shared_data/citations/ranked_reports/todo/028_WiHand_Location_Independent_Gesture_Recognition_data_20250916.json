  "lrsd_algorithm_data": {
    "mathematical_formulation": {
      "signal_decomposition": "X = A + E",
      "low_rank_component": "A = background_environment_information",
      "sparse_component": "E = gesture_signal_information",
      "optimization_objective": "min ||A||* + λ||E||₁",
      "constraint": "X = A + E",
      "nuclear_norm": "||A||* promotes low rank matrix",
      "l1_norm": "||E||₁ promotes sparse matrix"
    },
    "solution_method": {
      "algorithm": "Augmented_Lagrangian_Method_ADMM",
      "lagrangian_function": "Lμ(A,E,Y) = ||A||* + λ||E||₁ + ⟨X-A-E,Y⟩ + μ/2||X-A-E||²F",
      "iterative_updates": {
        "A_update": "A* = Dμ⁻¹{X - E + μ⁻¹Y}",
        "E_update": "E* = Sλμ⁻¹{X - A + μ⁻¹Y}",
        "operators": "D_τ = singular value soft thresholding, S_τ = element-wise soft thresholding"
      },
      "convergence_guarantee": "global_optimum_for_convex_problem"
    }
  },

  "subcarrier_selection_data": {
    "binned_entropy_algorithm": {
      "entropy_formula": "binned_entropy(X) = -∑ᵏ₌₀^min(maxbin,len(X)) pₖ ln(pₖ)",
      "importance_evaluation": {
        "high_entropy": "gesture_significantly_affected_subcarriers",
        "low_entropy": "gesture_weakly_affected_subcarriers"
      },
      "adaptive_selection": {
        "step1": "calculate_entropy_all_168_subcarriers",
        "step2": "rank_select_top_k_high_entropy_subcarriers",
        "step3": "dynamically_adjust_k_based_environment_changes"
      },
      "computational_complexity": "O(n log n)"
    }
  },

